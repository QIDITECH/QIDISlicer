%module{Slic3r::XS};

%{
#include <xsinit.h>
#include "libslic3r/Geometry.hpp"
#include "libslic3r/Geometry/ConvexHull.hpp"
#include "libslic3r/ShortestPath.hpp"
%}


%package{Slic3r::Geometry};

%{

Clone<Polygon>
convex_hull(points)
    Points      points
    CODE:
        RETVAL = Slic3r::Geometry::convex_hull(points);
    OUTPUT:
        RETVAL


double
rad2deg(angle)
    double      angle
    CODE:
        RETVAL = Slic3r::Geometry::rad2deg(angle);
    OUTPUT:
        RETVAL

double
deg2rad(angle)
    double      angle
    CODE:
        RETVAL = Slic3r::Geometry::deg2rad(angle);
    OUTPUT:
        RETVAL

IV
_constant()
  ALIAS:
    X           = X
    Y           = Y
    Z           = Z
  PROTOTYPE:
  CODE:
    RETVAL = ix;
  OUTPUT: RETVAL

%}

